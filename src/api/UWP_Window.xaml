<Window x:Class="src.api.UWP_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:src.api"
        mc:Ignorable="d"
        Title="UWP_Window"
        Height="450"
        Width="800">
    <Grid>
        <TextBlock Text="UWP_Window"
                FontSize="24"
                FontWeight="Bold"
                Margin="0,0,0,16"
                Foreground="#222"
                TextAlignment="Center"
                Effect="{DynamicResource DropShadowEffect}"/>
        <Border Background="#F0F0F0"
                CornerRadius="8"
                Padding="16"
                Margin="0,16,0,0">
            <TextBlock Text="Hoşgeldiniz! Bu bir bilgi kutusudur."
                       FontSize="16"
                       TextAlignment="Center"
                       Effect="{DynamicResource DropShadowEffect}"
                       AutomationProperties.Name="Bilgi Kutusu"
                       Foreground="#444"/>
        </Border>
        <local:UWP_UserControl/>
        <Button Content="Gönder"
                Width="100"
                Height="32"/>
        <ListView x:Name="ItemList"
                  Height="120">
            <ListViewItem Content="Örnek 1"/>
            <ListViewItem Content="Örnek 2"/>
        </ListView>
    </Grid>
</Window>